// Affiche la bo√Æte de dialogue pour ajouter une t√¢che
  void _showTaskDialog(BuildContext context) {
    TextEditingController titleController = TextEditingController();
    TextEditingController descriptionController = TextEditingController();
    TextEditingController locationController = TextEditingController();
    String selectedTaskType = "Devoir"; // Valeur par d√©faut

    showDialog(
      context: context,
      builder: (BuildContext context) {
        return AlertDialog(
          shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(12)),
          title: const Text("Add Task"),
          content: Column(
            mainAxisSize: MainAxisSize.min,
            children: [
              TextField(controller: titleController, decoration: const InputDecoration(labelText: "Title")),
              TextField(controller: descriptionController, decoration: const InputDecoration(labelText: "Description")),
              TextField(controller: locationController, decoration: const InputDecoration(labelText: "Location")),
              const SizedBox(height: 10),
              DropdownButtonFormField<String>(
                value: selectedTaskType,
                decoration: const InputDecoration(labelText: "Task Type"),
                items: ["Devoir", "Cours", "Examen"].map((String category) {
                  return DropdownMenuItem(value: category, child: Text(category));
                }).toList(),
                onChanged: (String? newValue) {
                  setState(() {
                    selectedTaskType = newValue!;
                  });
                },
              ),
            ],
          ),
          actions: [
            TextButton(
              onPressed: () => Navigator.pop(context),
              child: const Text("Cancel"),
            ),
            ElevatedButton(
              onPressed: () {
                setState(() {
                  taskList.add({
                    "title": titleController.text,
                    "description": descriptionController.text,
                    "location": locationController.text,
                    "type": selectedTaskType, // Stockage du type pour l‚Äôic√¥ne
                  });
                });
                Navigator.pop(context);
              },
              child: const Text("Add"),
            ),
          ],
        );
      },
    );
  }

  // Retourne l‚Äôic√¥ne en fonction du type de t√¢che
  IconData _getTaskIcon(String taskType) {
    switch (taskType) {
      case "Devoir":
        return Icons.menu_book; // üìñ Livre ouvert
      case "Cours":
        return Icons.book; // üìï Livre ferm√©
      case "Examen":
        return Icons.description; // üìÇ Fichier
      default:
        return Icons.event_note; // üìù Ic√¥ne g√©n√©rique
    }
  }

